import random
import time
import sys
import requests
from Adafruit_IO import MQTTClient

AIO_FEED_ID = "button1"
AIO_USERNAME = "WinWavenoone0511"
AIO_KEY = "aio_fqHo37V5rgA5tq5cqW7ZbfwLvkkI"
global_equation = ""


def connected(client):
    print("Ket noi thanh cong ...")
    client.subscribe(AIO_FEED_ID)
    client.subscribe("equation")


def subscribe(client, userdata, mid, granted_qos):
    print("Subscribe thanh cong ...")


def disconnected(client):
    print("Ngat ket noi ...")
    sys.exit(1)


def message(client, feed_id, payload):
    print("Nhan du lieu: " + payload)
    if feed_id == "equation":
        global_equation = payload
        print(global_equation)


def modify_value(x1, x2, x3):
    result = eval("global_equation")
    print(result)
    return result


client = MQTTClient(AIO_USERNAME, AIO_KEY)
client.on_connect = connected
client.on_disconnect = disconnected
client.on_message = message
client.on_subscribe = subscribe
client.connect()
client.loop_background()


def init_global_equation():
    headers = {}
    aio_url = "https://io.adafruit.com/api/v2/WinWavenoone0511/feeds/equation"
    x = requests.get(url=aio_url, headers=headers, verify=False)
    data = x.json()
    global_equation = data["last_value"]
    print("Get latest value:", global_equation)


while True:
    time.sleep(5)
    client.publish("sensor1", random.randint(0, 100))
    client.publish("sensor2", random.randint(0, 80))
    client.publish("sensor3", random.randint(0, 70))
    x4 = modify_value(3, 4, 5)
    print(x4)
    pass
